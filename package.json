{
  "name": "lost-found-devices",
  "version": "1.0.0",
  "description": "A modern Lost & Found Devices platform for college students",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "install-all": "npm run install-server && npm run install-client",
    "heroku-postbuild": "npm run install-all && npm run build"
  },
  "keywords": [
    "lost-and-found",
    "react",
    "nodejs",
    "mongodb",
    "express",
    "college",
    "students"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/lost-found-devices"
  },
  "bugs": {
    "url": "https://github.com/yourusername/lost-found-devices/issues"
  },
  "homepage": "https://github.com/yourusername/lost-found-devices#readme"
}
